<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mr_fit_v1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature android:required="true" android:name="android.hardware.location.gps"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mr_fit_v1.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mr_fit_v1.SecondActivity"
            android:label="@string/title_activity_second" >
        </activity>
        <activity
            android:name="com.example.mr_fit_v1.TrackerActivity"
            android:label="@string/title_activity_tracker" >
        </activity>
        <activity
            android:name="com.example.mr_fit_v1.WalkingActivity"
            android:label="@string/title_activity_walking" >
        </activity>
        <activity
            android:name="com.example.mr_fit_v1.ReportActivity"
            android:label="@string/title_activity_report" >
        </activity>
        <activity
            android:name="com.example.mr_fit_v1.StatisticActivity"
            android:label="@string/title_activity_statistic" >
        </activity>
        <activity
            android:name="com.example.mr_fit_v1.DayActivity"
            android:label="@string/title_activity_day" >
        </activity>
        <activity
            android:name="com.example.mr_fit_v1.MonthActivity"
            android:label="@string/title_activity_month" >
        </activity>
        <activity
            android:name="com.example.mr_fit_v1.WeekActivity"
            android:label="@string/title_activity_week" >
        </activity>
        <activity
            android:name="com.example.mr_fit_v1.FriendsActivity"
            android:label="@string/title_activity_friends" >
        </activity>
        <activity
            android:name="com.example.mr_fit_v1.SearchFriendActivity"
            android:label="@string/title_activity_search_friend" >
        </activity>
        <activity
            android:name="com.example.mr_fit_v1.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <receiver android:name=".LocationReceiver" android:exported="false">
            <intent-filter>
                <action android:name="com.example.mr_fit_v1.ws.local.ACTION_LOCATION"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
