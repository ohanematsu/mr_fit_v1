<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.mr_fit_v1.SecondActivity"
    
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_margin"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/rela_width"
        android:layout_height="@dimen/rela_width"
        android:contentDescription="@string/avatar" 
      
        android:src="@drawable/avatar1" />

    <fragment
        android:id="@+id/content"
        android:name="com.example.mr_fit_v1.fragment_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_second"
        class = "com.example.mr_fit_v1.SecondFragment" />

</LinearLayout>