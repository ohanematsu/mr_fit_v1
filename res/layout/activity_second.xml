<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.mr_fit_v1.SecondActivity"
    tools:ignore="MergeRootFrame" >

    <DatePicker
        android:id="@+id/datePicker1"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:src="@drawable/a1" />

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/clock" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Since Last Exercise"
            android:textAppearance="?android:attr/textAppearanceMedium" />
       <ProgressBar
			android:id="@+id/adprogress_progressBar0"
			android:layout_height="wrap_content"
			android:layout_width="260dp"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_alignParentBottom="true"
			android:layout_margin="10dp"
		/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/clock2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Exercise Time"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <ProgressBar
			android:id="@+id/adprogress_progressBar1"
			android:layout_height="wrap_content"
			android:layout_width="260dp"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_alignParentBottom="true"
			android:layout_margin="10dp"
		/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/calory" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Calorie Burn"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <ProgressBar
			android:id="@+id/adprogress_progressBar"
			android:layout_height="wrap_content"
			android:layout_width="260dp"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_alignParentBottom="true"
			android:layout_margin="10dp"
		/>

    </LinearLayout>

</LinearLayout>